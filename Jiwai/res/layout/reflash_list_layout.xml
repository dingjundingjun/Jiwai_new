<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.sounuo.jiwai.views.AutoListView
        android:id="@+id/auto_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.sounuo.jiwai.views.TitanicTextView
        android:id="@+id/titanic_text"
        android:textSize="@dimen/loading_text_size"
        android:text="@string/loading"
        android:layout_centerInParent="true"
        android:textColor="@color/app_style_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/reload"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:text="@string/reload_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
